{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": "Artigo de blog"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "title": {
      "unique": true,
      "required": true,
      "type": "string"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "content": {
      "type": "text"
    },
    "author": {
      "model": "user",
      "via": "articles",
      "plugin": "users-permissions"
    }
  }
}